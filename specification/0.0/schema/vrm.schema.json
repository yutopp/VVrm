{
    "$id": "vrm.schema.json",
    "title": "vrm",
    "description": "A VRM extension is for 3d humanoid avatars (and models) in VR applications.",
    "type": "object",
    "properties": {
        "blendShapeMaster": {
            "$ref": "vrm.blendshape.schema.json"
        },
        "exporterVersion": {
            "description": "Version of exporter that vrm created.",
            "type": "string"
        },
        "firstPerson": {
            "$ref": "vrm.firstperson.schema.json"
        },
        "humanoid": {
            "$ref": "vrm.humanoid.schema.json"
        },
        "materialProperties": {
            "type": "array",
            "items": {
                "$ref": "vrm.material.schema.json"
            }
        },
        "meta": {
            "$ref": "vrm.meta.schema.json"
        },
        "secondaryAnimation": {
            "$ref": "vrm.secondaryanimation.schema.json"
        },
        "specVersion": {
            "description": "The VRM specification version that this extension uses.",
            "type": "string"
        }
    }
}